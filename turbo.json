{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["MONGODB_CONNECTION_URI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
