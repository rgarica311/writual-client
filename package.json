{
  "name": "writual",
  "private": true,
  "version": "1.0.0",
  "workspaces": ["apps/*"],
  "description": "Writual Client",
  "author": "Writual",
  "license": "ISC",
  "repository": {"type": "git", "url": "https://github.com/writual/writual.git"},
  "bugs": {"url": "https://github.com/writual/writual/issues"},
  "scripts": {
    "deploy": "firebase deploy --only apphosting",
    "deploy:web": "firebase deploy --only apphosting:writual",
    "deploy:api": "firebase deploy --only apphosting:writual-api --debug",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "turbo run dev --filter=@writual/web",
    "dev:api": "turbo run dev --filter=@writual/api"
  },
  "devDependencies": {
    "firebase-tools": "^15.5.1",
    "turbo": "^2.3.0",
    "typescript": "^5.9.3"
  }

}
